{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"arrowParens": "always",
	"endOfLine": "lf",

	"svelteSortOrder": "scripts-options-markup-styles",
	"svelteStrictMode": true,
	"svelteAllowShorthand": true,
	"svelteIndentScriptAndStyle": true
}
